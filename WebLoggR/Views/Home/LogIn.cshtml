@{
    ViewBag.Title = "LogIn";
}

<div class="well">
    <div class="row-fluid">
        <div class="span3 offset9">
            <a href="@Url.Action("SignUp", "Home")" class="input-block-level btn btn-success">Sign Up</a>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6 offset3">
            <form method="post" action="/Home/Login" class ="inline-form">
                <fieldset>
                    <legend>Log In</legend>

                    <div class="control-group">
                        <label>User Name:</label>
                        <input type="text" name="user"/>
                    </div>
                    <div class="control-group">
                        <label>Password:</label>
                        <input type="password" name="password"/>
                    </div>
                </fieldset>
                <input type="submit" class="btn btn-primary" value="Log In"/>
            </form>
        </div>
    </div>
</div>